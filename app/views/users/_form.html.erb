<%= form_for @user do |f| %>  
  <% if @user.errors.any? %>  
    <div class="error_messages">  
      <h2>Form is invalid</h2>  
      <ul>  
        <% for message in @user.errors.full_messages %>  
          <li><%= message %></li>  
        <% end %>  
      </ul>  
    </div>  
  <% end %>
<table>  
  <tr class="field">  
    <td><%= f.label :email %></td>  
    <td><%= f.text_field :email %></td>  
  </tr>
  <%if current_user %>
  <tr class="field">          
    <td><%= f.label :old_password %></td>   
    <td><%= f.password_field :old_password %></td>  
  </tr>
  <%end%>  
  <tr class="field">  
    <td><%= f.label :password %></td>  
    <td><%= f.password_field :password %></td>  
  </tr>  
  <tr class="field">  
    <td><%= f.label :password_confirmation %></td>  
    <td><%= f.password_field :password_confirmation %></td>  
  </tr>  
  <tr class="field">
    <td><%= f.label :access_level %></td>
    <td><%= f.number_field :access_level %></td> 
  </tr>
  <tr class="actions"><td><%= f.submit %> or <%= link_to "Log in", log_in_path%></td></tr>
</table> 
<% end %>  
